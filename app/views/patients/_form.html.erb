


<%= form_for @patient do |f| %>
    <div>
      <ul>
      <% if @patient.errors.any? %>
        <% @patient.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        <% end %>
      </ul>

    </div>


  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :age %><br>
    <%= f.text_field :age %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :medical_history %><br>
    <%= f.text_field :medical_history %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
