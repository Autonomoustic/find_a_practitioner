<!DOCTYPE html>
<html>
  <header>
  </header>
  <body>
      <h1>Patients</h1>

        <table>
        <thead>
          <tr>
            <th> Name </th>
            <th> Age</th>
            <th> Address</th>
            <th> Medical history</th>
            <th> Number of appointments</th>
            <th> Number of practitioners seen</th>

            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @patients.each do |patient| %>
          <tr>
            <td><a href="/patients/ <%= patient.id %>"> <%= patient.name %></a></td>
            <td><%= patient.age %></td>
            <td><%= patient.address %></td>
            <td><%= patient.medical_history %></td>
            <td> <%= patient.count_appointments %> </td>
            <td> <%= patient.count_practitioners %> </td>
          </tr>
          <% end %>
        </tbody>
        </table>
  </body>
