<p id="notice"><%= notice %></p>

<h1>Patients</h1>

<table>
  <thead>
    <tr>
      <th> Name </th>
      <th> Age</th>
      <th> Address</th>
      <th> Medical history</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
  <tr>
    <td><a href="/patients/ <%= patient.id %>"><%= patient.name %></a></td>
      <td><%= patient.age %></td>
      <td><%= patient.address %></td>
      <td><%= patient.medical_history %></td>
      <% end %>
  </tr>
  </tbody>
</table>

<br>


<div class="navigation"
<ul>
  <li><%= link_to 'Book an appointment', practitioners_path %></li>
  <li><%= link_to 'All patients', patients_path %></li>
  <li><%= link_to 'All Clinics', clinics_path %></li>
  <li><%= link_to 'New Patient', new_patient_path %></li>
</ul>
</div>
