<!DOCTYPE html>
<html>
  <header>
  </header>
  <body>
      <h1>Patients</h1>

        <table>
        <thead>
          <tr>
            <th> Name </th>
            <th> Age</th>
            <th> Address</th>
            <th> Medical history</th>

            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @patients.each do |patient| %>
          <tr>
            <td><a href="/patients/ <%= patient.id %>"> <%= patient.name %></a></td>
            <td><%= patient.age %></td>
            <td><%= patient.address %></td>
            <td><%= patient.medical_history %></td>
          </tr>
          <% end %>
        </tbody>
        </table>
  </body>
  <footer>
    <div id="footer">
         <p> <%= link_to 'Practitioners', practitioners_path %> | <%= link_to 'Clinics', clinics_path %> |  <%= link_to 'Patients', patients_path %> </p>
     </div>
  </footer>

</html>
