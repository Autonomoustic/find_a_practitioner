<h1>Here is a list of all our Clinincs</h1>

<h2>Click on the link to have a look at the services available and find a practitioner</h2>

    <table>
        <thead>
          <tr>
            <th><strong>Name</strong> </th>
            <th> <strong>Address</strong></th>
            <th> Phone number</th>

            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
            <% @clinics.each do |clinic| %>
            <tr>
                <td><a href="/clinics/ <%= clinic.id %>"><%= clinic.name %></a></td>
                <td><%= clinic.address %></td>
                <td><%= clinic.phone_number %></td>
                <% end %>
            </tr>
        </tbody>
      </table>


      <div class="navigation"
        <ul>
         <li><%= link_to 'All practitioners', practitioners_path %></li>
         <li><%= link_to 'All patients', patients_path %></li>
          <li><%= link_to 'All Clinics', clinics_path %></li>
          <li><%= link_to 'New Patient', new_patient_path %></li>
        </ul>
      </div>
