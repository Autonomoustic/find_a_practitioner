<h1>Your appointments</h1>


<% @appointments.each do |appointment| %>
  <h3>Practitioner: <%= link_to appointment.practitioner.name, appointment_path(appointment) %></h3>
  <p>Clinic: <%= link_to appointment.practitioner.department.clinic.name, clinic_path(appointment.practitioner.department.clinic.id)%> | <%=appointment.practitioner.department.clinic.address%></p>
<% end %>


<ul>
  <li><%= link_to 'Book an appointment', practitioners_path %></li>
  <li><%= link_to 'All patients', patients_path %></li>
  <li><%= link_to 'All Clinics', clinics_path %></li>
  <li><%= link_to 'New Patient', new_patient_path %></li>
</ul>
