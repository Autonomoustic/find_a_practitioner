<h1>Here you can edit your appointment</h1>

<ul>
<% if flash[:errors] %>
 <% flash[:errors].each do |msg| %>
   <li><%= msg %></li>
   <% end %>
 <% end %>
</ul>

<%= form_for @appointment do |f|%>

<%= f.label :practitioner_id %>
<%= f.collection_select :practitioner_id, Practitioner.all, :id, :name%>
<%= f.hidden_field :date, value: params[:date] %>

<%= f.label 'Patient' %>
<%= f.collection_select :patient_id, Patient.all, :id, :name %>

<%= f.label 'Time' %>
<%= f.collection_select :availability_id, @availabilities, :id, :time %>

<%= f.submit %>

<% end %>
