<h1>Book an appointment</h1>


<%= form_for(@appointment) do |f| %>

<ul>
<% if @appointment.errors.any? %>
  <% @appointment.errors.full_messages do |msg| %>
  <li><%= msg %></li>
  <% end %>
  <% end %>
</ul>

<%= f.label :patient %>
<%= f.collection_select :patient, Patient.all, :id, :name %>

<%= f.label :date %>
<%= f.text_field :date %>

<%= f.label :time %>
<%= f.text_field :time %>

<%= f.label 'Choose a practitioner' %>
<%= f.collection_select :practitioner, Practitioner.all, :id, :name %>

<%= f.submit %>

<% end %>
